# npm configuration for CI/CD environments
# Increased timeout and retry settings to handle network issues
fetch-timeout=300000
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Optional: If you have a Nexus npm registry, uncomment and configure:
# registry=http://nexus.imcc.com:8081/repository/npm-group/
# @your-scope:registry=http://nexus.imcc.com:8081/repository/npm-group/

# Network settings
maxsockets=15
strict-ssl=false

